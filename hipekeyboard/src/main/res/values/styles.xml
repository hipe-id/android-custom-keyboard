    <style name="TextAppearance.Zuragan" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@drawable/selector_textinput_view</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Base.Theme.Zuragan.blue" parent="Base.Theme.Zuragan"/>


    <style name="Base.Theme.Zuragan" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/color_primary_light</item>
        <item name="colorPrimaryDark">@color/color_primary</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/color_primary_light</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="tabSelectedTextColor">@color/color_primary_light</item>
    </style>

    <style name="MaterialDrawer.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>
