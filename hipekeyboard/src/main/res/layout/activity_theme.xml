                        android:cropToPadding="true"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/kb_bg_4"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
